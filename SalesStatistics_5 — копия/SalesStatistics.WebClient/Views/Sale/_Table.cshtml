@model IEnumerable<SalesStatistics.WebClient.Models.ViewModels.SaleViewModel>

<div id="sales-table-container">
    <table class="table table-bordered text-center">
        <tr>
            <th class="text-center">
                Client surname
            </th>
            <th class="text-center">
                Client name
            </th>
            <th class="text-center">
                Product name
            </th>
            <th class="text-center">
                Cost
            </th>
            <th class="text-center">
                Purchase date
            </th>
            <th></th>
        </tr>
    
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ClientSurname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClientFirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductCost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("Edit", "Edit", new {id = item.Id})
                    }
                    | @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                    @if (User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("Delete", "Delete", new {id = item.Id})
                    }
                </td>
            </tr>
        }
    </table>
</div>