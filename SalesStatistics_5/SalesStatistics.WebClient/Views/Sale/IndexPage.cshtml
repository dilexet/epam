@model IEnumerable<SalesStatistics.WebClient.Models.ViewModels.SaleViewModel>

<table class="table table-bordered text-center">
    <tr>
        <th class="text-center">
            @Html.ActionLink("Client surname", "Index", new {sortOrder = ViewBag.NameSortParm})
        </th>
        <th class="text-center">
            Client name
        </th>
        <th class="text-center">
            Product name
        </th>
        <th class="text-center">
            Cost
        </th>
        <th class="text-center">
            @Html.ActionLink("Purchase date", "Index", new {sortOrder = ViewBag.DateSortParm})
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Client.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Edit", "Edit", new {id = item.Id})
                }
                | @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                @if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Delete", "Delete", new {id = item.Id})
                }
            </td>
        </tr>
    }
</table>