@model IEnumerable<SalesStatistics.WebClient.Models.ViewModels.SaleViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sales</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div>
    @using (Ajax.BeginForm("Index", new AjaxOptions {UpdateTargetId = "table"}))
    {
        <div>
            <p>
                Find by client:
                @Html.TextBox("ClientName")
            </p>

            <p>
                Find by product:
                @Html.TextBox("ProductName")
            </p>

            <p>
                Find by DateStart:
                @Html.TextBox("DateStart", "", "", new {Type = "date"})
            </p>

            <p>
                Find by DateEnd:
                @Html.TextBox("DateEnd", "", "", new {Type = "date"})
            </p>

            <p>
                <input class="btn btn-default" type="submit" value="Search"/>
            </p>
        </div>
    }
</div>


<div class="row">
    <div class="col-md-8" id="table">

    </div>
</div>

@Scripts.Render("~/scripts/jquery-3.5.1.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")