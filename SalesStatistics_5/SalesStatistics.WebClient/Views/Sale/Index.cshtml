@model PagedList.IPagedList<SalesStatistics.ModelLayer.Models.Sale>
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sales</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div>
    @using (Html.BeginForm())
    {
        <div>
            <p>Find by client: @Html.TextBox("SearchStringClient")</p>
            <p>Find by product: @Html.TextBox("SearchStringProduct")</p>
            <p><input class="btn btn-default" type="submit" value="Search"/></p>
        </div>
    }
</div>


<div class="row">
    <div class="col-md-8">
        <table class="table table-bordered text-center">
            <tr>
                <th class="text-center">
                    @Html.ActionLink("Client surname", "Index", new {sortOrder = ViewBag.NameSortParm})
                </th>
                <th class="text-center">
                    Client name
                </th>
                <th class="text-center">
                    Product name
                </th>
                <th class="text-center">
                    Cost
                </th>
                <th class="text-center">
                    @Html.ActionLink("Purchase date", "Index", new {sortOrder = ViewBag.DateSortParm})
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Client.Surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Client.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Cost)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                        @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                        @Html.ActionLink("Delete", "Delete", new {id = item.Id})
                    </td>
                </tr>
            }
        </table>
        <br/>
        <p> Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount</p>
        @Html.PagedListPager(Model, page => Url.Action("Index",
            new {page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter}))
    </div>
</div>